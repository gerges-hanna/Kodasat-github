@model IEnumerable<Kodasat.Models.Deposited>

@{
    ViewBag.Title = "الأشخاص الحاضرين";
}

<h2>الأشخاص الحاضرين</h2>


<div class="row">
    @foreach (var item in Model)
    {
        <div class="col-sm-6 col-md-4">
            <div class="thumbnail">

                <img src="@Url.Content("~/img/jesus.jpg")" alt="Icon" style="border-radius:100px;height:100px;width:100px">
                <div class="caption">
                    <h3 style="text-align:center">@Html.DisplayFor(modelItem => item.fullName) </h3>
                    <p style="text-align:right">الرقم القومى:@Html.DisplayFor(modelItem => item.NationalID) </p>
                    @{ String atDate = item.AttendedOn.ToString("dd/MM/yyyy");}
                    <p style="text-align:right">حضر فى :@atDate </p>
                    <p style="text-align:center">@Html.ActionLink("Delete", "Delete", new { id = item.Id }, new { @class = "btn btn-danger" })</p>
                </div>
            </div>
        </div>

    }
</div>

