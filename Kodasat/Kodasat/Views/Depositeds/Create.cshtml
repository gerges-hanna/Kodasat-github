@model Kodasat.Models.Deposited

@{
    ViewBag.Title = "Create";
}


<link href="~/Style/StyleSheet1.css" rel="stylesheet" />
<style>
    span{
        color:red;
    }
</style>
<h4 style="text-align:right;color:chartreuse;">@TempData["dep"]</h4>
@{ TempData["dep"] = null; }
<h2 style="text-align:right" >حجز قداس</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
<div class="form-horizontal ">

    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="form-group">
        <label class = "control-label col-md-2 ArabicSide" >:الرقم القومى</label>
        <div class="col-md-10">
            @Html.EditorFor(model => model.NationalID, new { htmlAttributes = new { @type = "number", @class = "form-control ArabicSide", @placeholder = "الرقم القومى   " } })
            @Html.ValidationMessageFor(model => model.NationalID, "", new { @class = "text-danger ArabicSide" })
        </div>
    </div>

    <div class="form-group">
        <label class="control-label col-md-2 ArabicSide">:الأسم الرباعى</label>
        <div class="col-md-10">
            @Html.EditorFor(model => model.fullName, new { htmlAttributes = new { @class = "form-control ArabicSide", @placeholder = "الأسم الرباعي" } })
            @Html.ValidationMessageFor(model => model.fullName, "", new { @class = "text-danger ArabicSide" })
        </div>
    </div>




    <div class="form-group">
        <label class="control-label col-md-2 ArabicSide">:الكنيسة</label>
        <div class="col-md-10">
            @Html.DropDownList("churchesID", null, htmlAttributes: new { @class = "form-control ArabicSide" })
            @Html.ValidationMessageFor(model => model.churchesID, "", new { @class = "text-danger ArabicSide" })
        </div>
    </div>

    @*<div class="form-group">
            @Html.LabelFor(model => model.NumberFriends, htmlAttributes: new { @class = "control-label col-md-2 ArabicSide" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.NumberFriends, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.NumberFriends, "", new { @class = "text-danger" })
            </div>
        </div>*@
    <div class="form-group">
        <div class=" col-md-10">
            <input type="submit" value="search" class="btn btn-primary ArabicSide" />
        </div>
    </div>

    <div class="form-group" style="text-align:right;">
        <div class="col-md-offset-2 col-md-10" style="text-align:right">
            <h4>تعليمات هامه</h4>
            <ul dir="rtl">
                <li>احرص على ارتداء كمامتك واستخدام المطهر  والتباعد اثناء القداس</li>
                <li>اعطى فرصه لغيرك لأخذ بركه القداس بحضورك مره واحده<span> شهرياً</span></li>
                <li>غير مسموح الحضور للقداس والتناول لأى <span> شخص لديه أعراض أو مخالط لشخص مريض لحين التأكد من عدم إصابته</span></li>
            </ul>
        </div>
    </div>
</div>
}

<div style="clear:both">
    
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
